          li(style='white-space: nowrap;')
            a(href='#{config.siteUrl}/blog.html') Blog
          li(style='white-space: nowrap;')
            a(href='#{config.siteUrl}/api/') API
    .container
      .page-header
        h1= title
      block content

    block scripts